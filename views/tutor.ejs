                        <!-- Add a class link with anchor to the second section -->
                        <li class="nav-item">
                            <a class="nav-link" href="#second" rel="nofollow">
                                Add a Class
                            </a>
                        </li>
                        <!-- My classes link with anchor to the third section -->
                        <li class="nav-item">
                            <a class="nav-link" href="#third" rel="nofollow">
                                My Classes
                            </a>
                        </li>
                    </ul>
    
                    <ul class="navbar-nav list-inline">
                        <!-- Icons -->
                        <li class="">
                            <a class="nav-link" href="https://www.youtube.com/channel/UC5CF7mLQZhvx8O5GODZAhdA" rel="nofollow"
                                target="_blank">
                                <i class="fab fa-youtube"></i>
                            </a>
                        </li>
                        <li class="">
                            <a class="nav-link" href="https://www.facebook.com/mdbootstrap" rel="nofollow" target="_blank">
