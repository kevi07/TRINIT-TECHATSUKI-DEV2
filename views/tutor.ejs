                        </div>
                    </div>
                </div>
            </div>
            <!-- Inner -->
    
            <!-- Controls -->
        </div>
        <!-- Carousel wrapper -->
    </header>

    <!-- Second section with available timings -->
    <div id="second" class="second">
        <h3>Available Timings</h3>
        <button class="checkbox-btn" aria-checked="false">09:00AM - 12:00PM</button>
        <button class="checkbox-btn" aria-checked="false">12:00PM - 03:00PM</button>
        <button class="checkbox-btn" aria-checked="false">03:00PM - 06:00PM</button>
        <button class="checkbox-btn" aria-checked="false">CUSTOMIZE</button>
    </div>

    <!-- Third section for uploading videos -->
    <div id="third" class="third">
        <h2>Upload Video</h2>
        <form action="/upload" method="post" enctype="multipart/form-data">
            <input type="file" name="video" accept="video/*">
            <br><br>
            <input type="submit" value="Upload">
        </form>
    </div>

    <div class="third">
      <video id="live-stream" class="video-js vjs-default-skin" controls></video>
    </div>

    <!--Main Navigation-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
      var player = videojs('live-stream');
      if (Hls.isSupported()) {
          var hls = new Hls();
          hls.loadSource('YOUR_HLS_STREAM_URL.m3u8');
          hls.attachMedia(player);
      } else if (player.canPlayType('application/vnd.apple.mpegurl')) {
          player.src = 'YOUR_HLS_STREAM_URL.m3u8';
      }
  </script>
</body>
</html>
